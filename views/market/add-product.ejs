<%- include('../include/header') %>
<p> Add Product</p>

              <form action="/markets/add-prdct" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="title">Title</label>
                  <input
                    type="title"
                    id="title"
                    name="title"
                    class="form-control"
                    placeholder="Enter Title"
                    value="<%= typeof title != 'undefined' ? title : '' %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="description">Description</label>
                  <input
                    type="description"
                    id="description"
                    name="description"
                    class="form-control"
                    placeholder="Description"
                    value="<%= typeof description != 'undefined' ? description : '' %>"
                    required
                  />
                </div>
 
      
                <div class="row">
                  <div class="input-field">
                      <select name="type" id="type">
                      <option value="Private" selected>Private</option>
                      <option value="public" selected>Public</option>
                      
      
                      
                      </select>
                      <label for="type">Status</label>
                  </div>
              </div>
              
     
        
 
                <div class="form-group">
                  <label for="pimage">Upload Image</label>
                  <input type="file" id="pimage" 
                         name="pimage" class="form-control" value=" " required>
              </div>
      
              <div class="form-control">
                <label for="price">Price</label>
                <input
                    class="form-group"
                    type="number"
                    name="price"
                    id="price"
                    step="0.01"
                    value="<%= typeof price != 'undefined' ? price : '' %>"
                    required>
            </div>
      
                
                <button type="submit" class="btn btn-primary btn-block">
                  Add photo
                </button>
              </form>
              
              <%- include('../include/footer') %>