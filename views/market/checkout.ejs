<%- include('../include/header') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <a href="/markets/products" class="btn btn-secondary">Add more?</a>
        <main>
            <ul class="cart__item-list">
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <h1><%= p.productId.title %></h1>
                        <img src="/<%= p.productId.pimage %>" width="100" alt="">
                        <h2>Quantity: <%= p.quantity %></h2>
                    </li>
                <% }) %>
            </ul>

               
            
            
              
          
            


            <div class="centered">
                <h2>Total: <%= totalSum %></h2>
            </div>
            <% if(totalSum){ %>
                <a href="/markets/carts" class="btn btn-secondary">Go to cart</a>
            <div class="centered">
                <form action="/markets/new/create-order" method="POST">
                    <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="pk_test_51JvexoHTlAF53iyajAyvVZjF6sLuXfCheWa5srLDBekbXGVuTgoL3zJShSyCoJqBLceRGk6Zaj3so7lnZpEifaA300Hb9WQjbj"
                        data-amount="<%= totalSum * 100 %>"
                        data-name="Your order"
                        data-description="All ordered items"
                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                        data-locale="auto"
                        data-currency="usd">
                    </script>
                </form>
            </div>

           
            
            <% } else{ %> 
                <a href="/markets/carts" class="btn btn-secondary">Go to cart</a>
            <% } %>
        </main>
        <%- include('../include/footer') %>