<%- include('../include/header') %>
<h3>Edit Product</h3>
<div class="row">
    <form action="/markets/update/<%= product._id %>" method="POST" id="edit" enctype="multipart/form-data" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="<%= product.title %>">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="type" name="type">
                    <%= product.type %>
                    <option value="public"  <%= product.type == 'public' ? 'selected' : '' %>>Public</option>
                    <option value="draft"  <%= product.type == 'draft' ? 'selected' : '' %> >Draft</option>
                   
                </select>
                <label for="type">Type</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Description</h5>
                <textarea id="body" name="body"><%= product.description %></textarea>
            </div>
        </div>
   
        <div class="form-group">
            <label for="pimage">Change Image</label>
            <input type="file" id="pimage" 
                   name="pimage" class="form-control" value="" >
        </div>
        <img src="/<%= product.pimage %>" class="responsive" alt="<%= product.title %>">

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/markets/products" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
<%- include('../include/footer') %>