<%- include('../include/header') %>
<main>
    <a href="/markets/carts" class="btn btn-secondary">Go to cart</a>
    <a href="/markets/orders/orders" class="btn btn-secondary">View Orders</a>

    <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>
               
            
                <div class="product">
                    <div class="product-img">
                        
                        <a href="/markets/<%= product._id %>" class="info" ><img src="/<%= product.pimage %>" alt="">
                        </a>
                        <span class="tag">new</span>
                    </div>
                    
                        <div class="product-listing">
                            <div class="content">
                                <h1 class="name"><%= product.title %></h1>
                                <p class="info"> <%= product.description %></p>
                                <p class="price">$<%= product.price %></p>
                                <div class="btn-and-rating-box">
                                    <div class="rating">
                                        <img src="img/star.png" alt="">
                                        <img src="img/star.png" alt="">
                                        <img src="img/star.png" alt="">
                                        <img src="img/star.png" alt="">
                                        <img src="img/star stroke.png" alt="">
                                    </div>
                               
                                   
                                        <%- include('../include/add-to-cart', {product: product}) %>
                                   
                                  
                                </div>
                            </div>
                        
                    </div>
                </div>
                <% } %>
        </div>
        
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
</main>


<%- include('../include/footer') %>